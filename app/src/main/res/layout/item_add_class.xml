<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#F3CDDA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:backgroundTint="@color/white"
            android:background="@drawable/buton_blue_sky"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="30dp"
            android:padding="20dp"
            android:textAlignment="center"
            android:text="Thêm Lớp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_item_malop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bg_border"
            android:hint="Nhập Mã Lớp"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:textColorHint="#DFCED8"
            android:textColor="@color/red"
            android:textSize="25dp" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/edt_item_tenlop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bg_border"
            android:hint="Nhập Tên Lớp"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:textColorHint="#DFCED8"
            android:textColor="@color/red"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_delete_item_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:layout_weight="1"
                android:background="@drawable/button_login"
                android:text="Thoát"
                android:textSize="20dp" />

            <Button
                android:padding="15sp"
                android:id="@+id/btn_add_item_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Save"
                android:layout_weight="1"
                android:background="@drawable/button_login"
                android:text="Thêm"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>