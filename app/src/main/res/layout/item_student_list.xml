<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    :android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_masinhvien_item_student_list"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_textview"
        android:gravity="center"
        android:hint="StudentId"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_tensinhvien_item_student_list"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_textview"
        android:gravity="center"
        android:hint="StudentName"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_ngaysinh_item_student_list"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_textview"
        android:gravity="center"
        android:hint="BirthDay"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_malop_item_student_list"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_textview"
        android:gravity="center"
        android:hint="ClassId"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="15dp" />


</LinearLayout>