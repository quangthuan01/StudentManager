<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".Activity.ActivityManager">

    <TextView
        android:text="Manager"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:textColor="@color/color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="2dp"
        android:id="@+id/spn_activity_qlsv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="14dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textLayout"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="clear_text"
        android:textColorHint="@color/red"
        android:hint="NameStudent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInput_namestudent_qlsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textLayout1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/red"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="clear_text"
        android:hint="StudentCode"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInput_codestudent_qlsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="12dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="12dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/edt_ngaysinh_activity_qlsv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/red"
            android:textColor="@color/red"
            android:ems="19"
            android:hint="Ngay sinh"
            android:padding="14dp" />

        <Button
            android:id="@+id/btn_chonngaysinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day" />
    </LinearLayout>


        <Button
            android:id="@+id/btn_add_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/button_login"
            android:ems="6"
            android:text="Thêm"
            android:textSize="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Danh Sách Sinh Viên "
        android:textAlignment="center"
        android:textColor="@color/color"
        android:textSize="30dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_masinhvien_item_student_list"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_textview"
            android:gravity="center"
            android:hint="MãSV"
            android:textColor="@android:color/holo_red_dark"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_tensinhvien_item_student_list"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@drawable/bg_textview"
            android:gravity="center"
            android:hint="TênSinhViên"
            android:textColor="@android:color/holo_red_dark"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_ngaysinh_item_student_list"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_textview"
            android:gravity="center"
            android:hint="NgàySinh"
            android:textColor="@android:color/holo_red_dark"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_malop_item_student_list"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_textview"
            android:gravity="center"
            android:hint="MãLớp"
            android:textColor="@android:color/holo_red_dark"
            android:textColorHint="@android:color/holo_red_dark"
            android:textSize="15dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_activity_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#DFE9ED" />

</LinearLayout>

