<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BF6E4"
    android:orientation="vertical"
    tools:context=".Activity.ActivityContact">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:padding="20dp"
        android:text="Contact"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="25dp"
            android:text="Name: "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/name_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Please enter your full Name"
            android:inputType="text"
            android:padding="24dp"
            android:textColor="@color/red"
            android:textColorHint="@color/red" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="25dp"
            android:text="Gmail: "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/gmail_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Please enter your Gmail"
            android:inputType="textEmailAddress"
            android:padding="24dp"
            android:textColor="@color/red"
            android:textColorHint="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="25dp"
            android:text="Phone: "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/phone_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Please enter your Phone"
            android:inputType="number"
            android:padding="24dp"
            android:textColor="@color/red"
            android:textColorHint="@color/red" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_tosend_contact"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:textColor="@color/red"
        android:text="TO send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>