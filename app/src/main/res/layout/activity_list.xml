<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activity.ActivityList">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="40dp"
        android:text="Danh Sách Lớp"
        android:textAlignment="center"
        android:textColor="@color/color" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tenlop_activity_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/buton_blue_sky"
                android:ems="8"
                android:text="Tên Lớp"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:padding="20dp"
                android:id="@+id/tv_malop_activity_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/buton_blue_sky"
                android:ems="8"
                android:text="Mã Lớp"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_activity_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>